                    </div>
                  </div>

                  <div className="mt-8 rounded-2xl border border-zinc-200 bg-white p-5 text-xs leading-relaxed text-zinc-600">
                    Este sitio es informativo y no constituye asesoramiento jurídico. La aceptación de un encargo se formaliza por escrito, definiendo alcance, plazos y honorarios.
                  </div>
                </div>

                <div className="rounded-3xl border border-zinc-200 bg-white p-6 shadow-soft">
                  <form onSubmit={handleSubmit}>
                    {/* Anti-spam honeypot */}
                    <input type="text" name="_gotcha" className="hidden" tabIndex="-1" autoComplete="off" />

                    {/* Formspree subject */}
                    <input type="hidden" name="_subject" value={subject} />

                    <div className="grid gap-4">
                      <div>
                        <label className="text-xs font-semibold text-zinc-700">{t.form.name}</label>
                        <input
                          required
                          value={form.name}
                          onChange={(e) => setForm({ ...form, name: e.target.value })}
                          name="name"
                          type="text"
                          className="mt-1 w-full rounded-2xl border border-zinc-200 bg-zinc-50 px-4 py-3 text-sm outline-none focus:border-zinc-400"
                          placeholder=""
                        />
                      </div>

                      <div>
                        <label className="text-xs font-semibold text-zinc-700">{t.form.email}</label>
                        <input
                          required
                          value={form.email}
                          onChange={(e) => setForm({ ...form, email: e.target.value })}
                          name="email"
                          type="email"
                          className="mt-1 w-full rounded-2xl border border-zinc-200 bg-zinc-50 px-4 py-3 text-sm outline-none focus:border-zinc-400"
                          placeholder=""
                        />
                      </div>

                      <div>
                        <label className="text-xs font-semibold text-zinc-700">{t.form.service}</label>
                        <select
                          value={form.service}
                          onChange={(e) => setForm({ ...form, service: e.target.value })}
                          name="service"
                          className="mt-1 w-full rounded-2xl border border-zinc-200 bg-zinc-50 px-4 py-3 text-sm outline-none focus:border-zinc-400"
                        >
                          {t.form.serviceOptions.map((opt, idx) => (
                            <option key={idx} value={opt}>{opt}</option>
                          ))}
                        </select>
                      </div>

                      <div>
                        <label className="text-xs font-semibold text-zinc-700">{t.form.message}</label>
                        <textarea
                          required
                          value={form.message}
                          onChange={(e) => setForm({ ...form, message: e.target.value })}
                          name="message"
                          rows="6"
                          className="mt-1 w-full rounded-2xl border border-zinc-200 bg-zinc-50 px-4 py-3 text-sm outline-none focus:border-zinc-400"
                          placeholder=""
                        ></textarea>
                      </div>

                      <button
                        type="submit"
                        disabled={status.state === "sending"}
                        className={
                          "inline-flex items-center justify-center rounded-2xl px-5 py-3 text-sm font-semibold shadow-soft " +
                          (status.state === "sending"
                            ? "bg-zinc-400 text-white"
                            : "bg-zinc-900 text-white hover:bg-zinc-800")
                        }
                      >
                        <Icon name="send" className="mr-2 h-5 w-5" />
                        {status.state === "sending" ? t.form.sending : t.form.submit}
                      </button>

                      {status.state === "success" && (
                        <div className="rounded-2xl border border-emerald-200 bg-emerald-50 p-4 text-sm text-emerald-900">
                          {status.msg}
                        </div>
                      )}

                      {status.state === "error" && (
                        <div className="rounded-2xl border border-rose-200 bg-rose-50 p-4 text-sm text-rose-900">
                          {status.msg}
                        </div>
                      )}

                      <div className="text-[11px] text-zinc-500">
                        El asunto del correo se enviará como: <span className="font-semibold">{subject}</span>
                      </div>
                    </div>
                  </form>
                </div>
              </div>
            </div>
          </section>

          {/* Footer */}
          <footer className="border-t border-zinc-200 bg-white">
            <div className="mx-auto max-w-6xl px-4 py-8">
              <div className="flex flex-col gap-2 text-sm text-zinc-600 md:flex-row md:items-center md:justify-between">
                <div>{t.footer}</div>
                <div className="flex items-center gap-4">
                  <a href="#top" className="font-semibold hover:underline">↑</a>
                  <!-- Si quieres, añade páginas legales: /aviso-legal.html /privacidad.html -->
                </div>
              </div>
            </div>
          </footer>
        </div>
      );
    }

    ReactDOM.createRoot(document.getElementById("root")).render(<App />);
  </script>
</body>
</html>
